{% extends 'base.html.twig' %}

{% block title %}Livre index{% endblock %}

{% block body %}


<table class="table" style="width:60%; margin:auto; margin-top: 50px; margin-bottom: 50px">
    <thead>
        <tr>

            <th>Titre</th>
            <th>Auteur</th>
            <th>Catégorie</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
       
        {% for livre in livres %}
        {% if livre.user == app.user %}
        <tr>
        
            <td>{{ livre.title }}</td>
            <td>{{ livre.auteur }}</td>
            <td>{{ livre.category }}</td>
            <td>
                <a href="{{ path('app_livre_show', {'id': livre.id}) }}">Afficher</a>
                <a href="{{ path('app_livre_edit', {'id': livre.id}) }}">Éditer</a>
            </td>
        </tr>
        {% endif %}
       
        {% else %}
        <tr>
            <td colspan="4">pas d'enregistrement</td>
        </tr>
        {% endfor %}
    </tbody>
</table>


{% endblock %}